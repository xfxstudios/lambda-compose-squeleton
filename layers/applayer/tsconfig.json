{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    //"declaration": true,
    "target": "ES2017",
    "module": "commonjs",
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
  ]
}
